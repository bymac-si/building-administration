<div class="px-4 py-5 my-5 text-center">
   <h1> <i class="bi bi-building"></i> </h1>
    <h1 class="display-5 fw-bold">Edificios</h1>
    <div class="col-lg-6 mx-auto">
<table class="table table-striped col-lg-8 mx-auto text-center">
  <thead>
    <tr class="bg-secondary text-white">
      <th style="border:1px solid black" >Nombre</th>
      <th style="border:1px solid black">Dirección</th>
      <th style="border:1px solid black">Ciudad</th>
      <th style="border:1px solid black">Departamentos</th>
      <th colspan="4" style="border:1px solid black">Acción</th>
    </tr>
  </thead>
  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td style="border:1px solid black"><%= building.name %></td>
        <td style="border:1px solid black"><%= building.address %></td>
        <td style="border:1px solid black"><%= building.city %></td>
        <td style="border:1px solid black"><%= building.apartments.count %></td>
        <td style="border:1px solid black"><%= link_to "Ver", building %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "Agregar Edificio", new_building_path, class:'btn btn-primary text-white' %>
</div>
</div>
