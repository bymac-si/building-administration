<div class="px-4 py-5 my-5 text-center">
   <h1> <i class="bi bi-building"></i> </h1>
   <h1>Edificio</h1>
   <div class="col-lg-6 mx-auto">
<p><strong>Nombre:</strong> &nbsp;
<%= @building.name %></p>
<p><strong>Dirección: </strong> &nbsp;
<%= @building.address %></p>
<p><strong> Ciudad:</strong> &nbsp; 
<%= @building.city %></p> 
<h1>Departamentos</h1>
<table class="col-lg-6 mx-auto">
  <thead>
    <tr>
      <th>Número</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.number %></td>
        <td><%= link_to "Ver", apartment %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "Volver", buildings_path, class:'btn btn-primary' %>
</div >
</div>